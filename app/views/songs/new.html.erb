<%= render 'shared/header' %>
<div id="mid">
  <div class="container">
    <form action="search_songs" method="post">
      <input id="search"type="text" name="search" placeholder="Search">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    </form>

    <table>
      <thead>
        <tr>
          <th>Name</th>
          <th>Artist</th>
          <th>Album</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @result.songs.each do |song| %>
          <tr>
            <td><%= song.name%></td>
            <td><%= song.artist%></td>
            <td><%= song.album%></td>
            <td><%= link_to 'Add', songs_path(playlist_id: params[:playlist_id], name: song.name, album: song.album, artist: song.artist, img_url: song.img_url), method: :create, class: 'button add' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Back', playlists_path, class: "button" %>
  </div>
</div>

<%= render 'shared/footer' %>
